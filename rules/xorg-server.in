	bool
	depends on BROKEN
	prompt "aiglx"

config XORG_SERVER_STRING_REGISTRY
	bool
	prompt "string registry"

config XORG_SERVER_OPT_INSTALL_SETUID
	bool
	prompt "install server suid root"
