#	@$(call touch)

# ----------------------------------------------------------------------------
# Clean
# ----------------------------------------------------------------------------

@class@@packet@_clean:
	rm -rf $(STATEDIR)/@class@@packet@.*
	rm -rf $(@CLASS@@PACKET@_DIR)

